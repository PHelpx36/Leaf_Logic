<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.fsa.leaf_logic.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_novaPlanta"
            app:destination="@id/nav_novaPlanta"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_novaPlanta"
        android:name="com.fsa.leaf_logic.ui.gallery.NovaPlantaFragment"
        android:label="@string/menu_novaPlanta"
        tools:layout="@layout/fragment_nova_planta" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.fsa.leaf_logic.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>